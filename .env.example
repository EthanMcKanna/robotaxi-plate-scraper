# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Tip: run `npm run setup` for an interactive walkthrough.

# Gemini API (for vision/plate extraction)
GEMINI_API_KEY=your_gemini_api_key

# Supabase (same as main app)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Bot user ID (run: npm run seed:bot to create)
BOT_USER_ID=uuid-of-bot-user

# ===========================================
# SCRAPER SETTINGS
# ===========================================

# How far back to look for posts (in hours)
LOOKBACK_HOURS=2

# Maximum scrapers to run in parallel
MAX_CONCURRENT_SCRAPERS=1

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# ===========================================
# SCRAPER FEATURE FLAGS
# Enable/disable individual scrapers (true/false)
# ===========================================

# Reddit scraper - WORKING (uses JSON API)
ENABLE_REDDIT=true

# ===========================================
# LLM-ENHANCED SCRAPERS
# ===========================================

# OpenAI API (required for LLM scrapers)
OPENAI_API_KEY=

# Google Custom Search API (optional, for X/Twitter scraper)
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# Enable LLM-enhanced scrapers
ENABLE_LLM_REDDIT=true
ENABLE_LLM_X=true
